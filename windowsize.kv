# Test to resize the kivy window

<SizeInput>:
    orientation:'vertical'
    BoxLayout:
        Button:
            text: root.name
            on_release: root.action(w_input.text, h_input.text)
        BoxLayout:
            orientation:'vertical'
            TextInput:
                id:w_input
                hint_text: 'width'
                multiline: False
            TextInput:
                id:h_input
                hint_text: 'height'
                multiline: False
SizeIt:
    orientation: 'vertical'
    SizeInput:
        name: 'Window.size'
        action: root.wsize

    SizeInput:
        name: 'Window.size dp()'
        action: root.wsize_dp

    BoxLayout:
        orientation: 'vertical'
        Label:
            halign: 'left'
            valign: 'center'
            text_size: self.size
            text: '  Window Size:'

        Label:
            halign: 'left'
            valign: 'center'
            text_size: self.size
            text: '  Window Position:'

